<!--(内部选项背景)-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <corners android:radius="16dp" /> <!-- 圆角稍小于外层 -->
            <solid android:color="#3F51B5" /> <!-- 选中时的背景色 -->
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="16dp" />
            <solid android:color="@android:color/transparent" /> <!-- 未选中时透明 -->
        </shape>
    </item>
</selector>